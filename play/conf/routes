# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /api                        controllers.ApiDocController.api


#Functions for Article API
POST     /articles                     controllers.ArticleApiController.createArticle(request: Request)
DELETE     /articles/:id                     controllers.ArticleApiController.deleteArticle(request: Request, id: Integer)
GET     /articles/:id                     controllers.ArticleApiController.getArticle(request: Request, id: Integer)
GET     /articles                     controllers.ArticleApiController.listArticles(request: Request)
PUT     /articles/:id                     controllers.ArticleApiController.updateArticle(request: Request, id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file           controllers.Assets.at(file)
GET /versionedAssets/*file  controllers.Assets.versioned(file)